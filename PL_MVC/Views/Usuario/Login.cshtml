@model ML.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Slide Navbar</title> @*slide navbar style.css*@
    <link rel="stylesheet" type="text/css" href="~/Content/Styles/login.css">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
</head>
<body>
    @using (Html.BeginForm("Login", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="main">
            <input type="checkbox" id="chk" aria-hidden="true">

            <div class="signup">

                <form>
                    <label for="chk" aria-hidden="true">Login</label>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "email", @name = "email", @placeholder = "Email" })
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password", @name = "pswd", @placeholder = "Password" })
                    @*<input type="email" name="email" placeholder="Email" required="">
        <input type="password" name="pswd" placeholder="Password" required="">*@
                    <button>Login</button>
                </form>
            </div>

            <div class="login">
                <form>
                    <label for="chk" aria-hidden="true">Sign up</label>
                    <input type="email" name="email-S" placeholder="Email" required="">
                    <input type="password" name="pswd-S" placeholder="Password" required="">
                    <button>Sign up</button>
                </form>
            </div>
        </div>
    }
</body>
</html>